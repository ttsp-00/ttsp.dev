{
	"name": "ttsp-dev",
	"module": "index.ts",
	"version": "0.0.1",
	"type": "module",
	"private": true,
	"scripts": {
		"ttsp:i": "bun i && (cd apps/frontend-nextjs && bun i)",
		"ttsp:build": "bun build.ts",
		"pm2:start": "ttsp:build && pm2 start ecosystem.config.cjs --env production && pm2 save",
		"pm2:stop": "pm2 stop ecosystem.config.cjs && pm2 delete ttsp-dev && pm2 save"
	},
	"workspaces": [
		"packages/*"
	],
	"dependencies": {
		"react": "^19.1.0",
		"react-dom": "^19.1.0"
	},
	"devDependencies": {
		"@eslint/js": "^9.29.0",
		"@types/bun": "latest",
		"@types/node": "latest",
		"eslint": "^9.29.0",
		"eslint-plugin-react": "^7.37.5",
		"globals": "^16.2.0",
		"typescript-eslint": "^8.35.0"
	},
	"peerDependencies": {
		"typescript": "^5"
	}
}